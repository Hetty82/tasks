.layout-wrap.mod-tasks
  %h1 Tasks

  %ul
    - for task in @tasks
      %li{:id => task.id}
        = task.task
        |
        = link_to 'edit', edit_task_path(task), class: 'button small'
        |
        = link_to 'delete', task, method: 'delete', class: 'button small red'

  = render 'form'
